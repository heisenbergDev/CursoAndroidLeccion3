<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/elemento_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/elemento_a" />

    <Button
        android:id="@+id/elemento_b"      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/elemento_a"
        android:text="@string/elemento_b" />
    
    <Button
        android:id="@+id/elemento_c"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/elemento_a"
        android:text="@string/elemento_c" />  

</RelativeLayout>
